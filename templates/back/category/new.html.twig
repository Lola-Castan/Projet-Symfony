{% extends 'back.base.html.twig' %}
{% block menu_bo_categories %}active-back{% endblock %}
{% block title %}BackOffice - New Category{% endblock %}

{% block body %}
<main>
    <section class="section-show section-bo">
    <h1 class="bo-title">Create new category</h1>

    <div class="container p-4">
    <div class="row mb-2 fs-6">
        <div class="col">
            {{ form_start(form, {'attr' : {'novalidate': 'novalidate'} }) }}
            {{ form_row(form.name) }}
            {{ form_row(form.picture) }}
            <button class="table-btn">Add the new category</button>
            {{ form_end(form) }}
        </div>
    </div>
    </div>
    <br>
    <a class="table-btn" href="{{ path('app_category_index') }}">Back to list</a>
    </section>
</main>
{% endblock %}
